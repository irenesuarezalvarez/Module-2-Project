{{> navbar }}
<h1 class="my-4 text-center">Clinical history</h1>
<div class="d-flex flex-column justify-content-center align-items-center">
    <div class="col-11">
        <table class="table table-dark">
        <thead>
            <tr>
            <th scope="col">First Surname</th>
            <th scope="col">Second Surname</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            </tr>
        </thead>
        <tbody>
        
                <tr>
                    <th scope="row"> {{patient.firstSurname}}</th>
                    <td> {{patient.secondSurname}}</td>
                    <td> {{patient.name}}</td>
                    <td>{{patient.email}}</td>
                    <td>{{patient.phone}}</td>
                </tr>
        
        </tbody>
        </table>
    </div>
    
    <div>
        <form action="" method="POST" class="d-flex flex-column">
            <label for="history" class="my-2">Session: </label>
            <textarea name="history" id="" cols="150" rows="10"></textarea>
        </form>
    </div>


    <div class="d-flex flex-row justify-content-around form-group mx-3 my-4 col-12">
        <a href="/patients" class="btn btn-secondary mx-5 col-1"><i class="bi bi-arrow-left-square"></i> Back</a>
        <button type="submit" class="btn btn-success mx-5 col-1">Save</button>
    </div>
</div>